    <script>
        // Set current year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // DOM elements
        const fileInput = document.getElementById('fileInput');
        const selectFilesBtn = document.getElementById('selectFilesBtn');
        const dropArea = document.getElementById('dropArea');
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        const resizeSlider = document.getElementById('resizeSlider');
        const resizeValue = document.getElementById('resizeValue');
        const compressBtn = document.getElementById('compressBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const resultsSection = document.getElementById('resultsSection');
        const originalImage = document.getElementById('originalImage');
        const compressedImage = document.getElementById('compressedImage');
        const originalSize = document.getElementById('originalSize');
        const compressedSize = document.getElementById('compressedSize');
        const reductionPercent = document.getElementById('reductionPercent');
        const downloadBtn = document.getElementById('downloadBtn');
        
        // Variables
        let selectedFile = null;
        let compressedFile = null;
        
        // Event listeners
        selectFilesBtn.addEventListener('click', () => fileInput.click());
        
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFileSelection(e.target.files[0]);
            }
        });
        
        dropArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropArea.style.borderColor = '#4285f4';
            dropArea.style.backgroundColor = 'rgba(66, 133, 244, 0.1)';
        });
        
        dropArea.addEventListener('dragleave', () => {
            dropArea.style.borderColor = '#ccc';
            dropArea.style.backgroundColor = 'transparent';
        });
        
        dropArea.addEventListener('drop', (e) => {
            e.preventDefault();
            dropArea.style.borderColor = '#ccc';
            dropArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                handleFileSelection(e.dataTransfer.files[0]);
            }
        });
        
        qualitySlider.addEventListener('input', () => {
            qualityValue.textContent = qualitySlider.value;
        });
        
        resizeSlider.addEventListener('input', () => {
            resizeValue.textContent = resizeSlider.value;
        });
        
        compressBtn.addEventListener('click', compressImage);
        downloadBtn.addEventListener('click', downloadImage);
        
        // Functions
        function handleFileSelection(file) {
            // Check if file is an image
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, or WebP).');
                return;
            }
            
            // Check file size (max 10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size exceeds 10MB limit. Please choose a smaller image.');
                return;
            }
            
            selectedFile = file;
            compressBtn.disabled = false;
            
            // Display original image
            const reader = new FileReader();
            reader.onload = (e) => {
                originalImage.src = e.target.result;
                originalSize.textContent = formatFileSize(file.size);
            };
            reader.readAsDataURL(file);
            
            // Hide results section if it was shown
            resultsSection.style.display = 'none';
        }
        
        function compressImage() {
            if (!selectedFile) return;
            
            // Show loading spinner
            loadingSpinner.style.display = 'block';
            compressBtn.disabled = true;
            
            // Get compression settings
            const quality = parseInt(qualitySlider.value) / 100;
            const resizeFactor = parseInt(resizeSlider.value) / 100;
            const outputFormat = document.querySelector('input[name="outputFormat"]:checked').value;
            
            // Use setTimeout to allow UI to update before heavy computation
            setTimeout(() => {
                compressImageFile(selectedFile, quality, resizeFactor, outputFormat)
                    .then((compressedData) => {
                        compressedFile = compressedData;
                        
                        // Display compressed image
                        compressedImage.src = compressedData.url;
                        compressedSize.textContent = formatFileSize(compressedData.size);
                        
                        // Calculate reduction percentage
                        const reduction = Math.round((1 - compressedData.size / selectedFile.size) * 100);
                        reductionPercent.textContent = reduction;
                        
                        // Show results
                        resultsSection.style.display = 'block';
                        loadingSpinner.style.display = 'none';
                        compressBtn.disabled = false;
                    })
                    .catch((error) => {
                        console.error('Compression error:', error);
                        alert('An error occurred during compression. Please try again.');
                        loadingSpinner.style.display = 'none';
                        compressBtn.disabled = false;
                    });
            }, 100);
        }
        
        function compressImageFile(file, quality, resizeFactor, outputFormat) {
            return new Promise((resolve, reject) => {
                const img = new Image();
                const reader = new FileReader();
                
                reader.onload = (e) => {
                    img.onload = () => {
                        // Create canvas
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        
                        // Calculate new dimensions
                        const width = img.width * resizeFactor;
                        const height = img.height * resizeFactor;
                        
                        // Set canvas dimensions
                        canvas.width = width;
                        canvas.height = height;
                        
                        // Draw image on canvas with new dimensions
                        ctx.drawImage(img, 0, 0, width, height);
                        
                        // Determine output format
                        let mimeType = file.type;
                        if (outputFormat !== 'original') {
                            mimeType = `image/${outputFormat}`;
                        }
                        
                        // Convert to blob with specified quality
                        canvas.toBlob((blob) => {
                            if (!blob) {
                                reject(new Error('Canvas toBlob failed'));
                                return;
                            }
                            
                            // Create object URL for the compressed image
                            const url = URL.createObjectURL(blob);
                            
                            resolve({
                                url,
                                size: blob.size,
                                blob
                            });
                        }, mimeType, quality);
                    };
                    
                    img.onerror = () => {
                        reject(new Error('Image loading error'));
                    };
                    
                    img.src = e.target.result;
                };
                
                reader.onerror = () => {
                    reject(new Error('File reading error'));
                };
                
                reader.readAsDataURL(file);
            });
        }
        
        function downloadImage(e) {
            e.preventDefault();
            
            if (!compressedFile) return;
            
            // Create temporary link
            const link = document.createElement('a');
            link.href = compressedFile.url;
            
            // Determine file extension
            let extension = 'jpg';
            const outputFormat = document.querySelector('input[name="outputFormat"]:checked').value;
            
            if (outputFormat === 'original') {
                extension = selectedFile.name.split('.').pop().toLowerCase();
            } else {
                extension = outputFormat;
            }
            
            // Set download filename
            const originalName = selectedFile.name.split('.').shift();
            link.download = `${originalName}_compressed.${extension}`;
            
            // Trigger download
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Clean up
            URL.revokeObjectURL(compressedFile.url);
        }
        
        function formatFileSize(bytes) {
            if (bytes < 1024) {
                return bytes + ' bytes';
            } else if (bytes < 1024 * 1024) {
                return (bytes / 1024).toFixed(1) + ' KB';
            } else {
                return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
            }
        }
    </script>
</body>
</html>
